<?xml version='1.0' encoding='utf-8'?>
<widget id="com.rudikershaw.water-alarm-app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Water Alarm</name>
    <description>
        The mobile application for the water-alarm-app open source hardware project. Notifies you when your water alarm hardware
    </description>
    <author email="alexander_kershaw@hotmail.co.uk" href="http://www.rudikershaw.com">
        Rudi Kershaw
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-local-notification" spec="https://github.com/katzer/cordova-plugin-local-notifications.git">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="26.+" />
    </plugin>
    <engine name="android" spec="^7.1.4" />
</widget>
